<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="8dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/list_toolbar"
        android:layout_width="match_parent"
        app:menu="@menu/menu_bar"
        android:theme="@style/CardView"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="100dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image_listItom_imageView"
                android:src="@drawable/issanimage_tarezaminper"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:padding="4dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/mTitle_TextView"
                android:text="Title"
                android:inputType="textPersonName"
                android:layout_margin="6dp"
                android:textStyle="bold"
                android:textColor="#084071"
                android:layout_height="wrap_content"/>
<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_height="wrap_content">-->
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/nSubTitle_TextView"
                android:text="Number"
                android:inputType="phone"
                android:layout_margin="6dp"
                android:maxLength="12"
                android:textStyle="normal"
                android:textColor="#084071"
                android:layout_height="wrap_content"/>
<!--            <TextView-->
<!--                android:layout_width="150dp"-->
<!--                android:inputType="date"-->
<!--                android:layout_margin="6dp"-->
<!--                android:maxLength="10"-->
<!--                android:id="@+id/date_EditView"-->
<!--                android:layout_marginLeft="100dp"-->
<!--                android:textStyle="normal"-->
<!--                android:textColor="#084071"-->
<!--                android:layout_height="wrap_content"/>-->
<!--            </LinearLayout>-->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>