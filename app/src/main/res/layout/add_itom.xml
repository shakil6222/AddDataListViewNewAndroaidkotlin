<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:layout_gravity="center"
    android:paddingLeft="15dp"
    android:layout_marginHorizontal="10dp"
    android:background="#70EC7EA9"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content">
        <TextView
            android:text="ADD USER INFORMATATION"
            android:textStyle="bold"
            android:paddingVertical="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="#071987"
            android:maxLength="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/addImage_ImageView"
                android:src="@drawable/issanimage_tarezaminper"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="60dp">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/userName_EditText"
            android:padding="15dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/addperson"
            android:hint="User Name"
            android:textColor="#E87805"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="60dp">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/number_EditText"
            android:padding="15dp"
            android:textStyle="bold"
            android:hint="User Number"
            android:textColor="#E87805"
            android:textSize="18sp"
            android:drawableEnd="@drawable/addphone_number"
            android:inputType="phone"
            android:maxLength="12"
            android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>
